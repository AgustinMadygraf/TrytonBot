{# templates/chat/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Asistente Tryton{% endblock %}

{% block body %}
    <div class="chat-container" role="main">
        <div class="messages" id="messages" aria-live="polite">
        </div>
        <div class="input-container">
            <input type="text" id="user-input" placeholder="Escribe tu mensaje..." aria-label="Escribe tu mensaje" class="form-control">
            <button onclick="sendMessage()" class="btn btn-primary">Enviar</button>
        </div>
    </div>
{% endblock %}
